<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="35dp"
    android:elevation="16dp"
    android:orientation="vertical"
    app:cardCornerRadius="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EBEEE8E8"
        android:orientation="vertical">


        <TextView
            android:id="@+id/titleMed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textColor="@color/btColor"
            android:textSize="24sp"
            android:textStyle="bold"
            app:fontFamily="@font/comfortaa_light" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EBEEE8E8"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txtSee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NÂº de comprimidos restantes: "
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtCompNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="normal" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EBEEE8E8"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txtSee2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prazo de validade: "
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPrazo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="normal" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EBEEE8E8"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txtSee3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consumo regular atual: "
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtConsumo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="normal" />


        </LinearLayout>


        <ImageView
            android:id="@+id/imageEditDrug"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginHorizontal="250dp"
            android:layout_marginTop="-65dp"
            android:src="@drawable/ic_edit"></ImageView>


        <ImageView
            android:id="@+id/imageDeleteDrug"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginHorizontal="250dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/ic_delete_black_24dp"></ImageView>


    </LinearLayout>


</android.support.v7.widget.CardView>